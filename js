<!-- JS -->

var login = document.getElementById("nav-account");
login.addEventListener("click", zaloguj, false);

function zaloguj(ev)
{
	var el0 = document.createElement("div");
	el.id = "przyciemnienie";
	var body = document.body;
	
	body.appendChild(el);
}

